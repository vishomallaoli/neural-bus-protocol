{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "cd webapp && pip install -r requirements.txt"
    },
    "deploy": {
      "startCommand": "cd webapp && gunicorn app:app --bind 0.0.0.0:${PORT:-8080} --timeout 120",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }